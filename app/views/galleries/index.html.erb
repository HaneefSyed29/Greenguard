<div class="w-full">
  <%= render 'user/navbar' %>
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="items-center">
    <h1 class="font-medium text-2xl m-10 font-khand">Photo Gallery</h1>
    <%= link_to "New Gallery", new_gallery_path, class:"absolute bottom-8 right-8 text-white bg-gradient-to-r from-green-400 via-green-500 to-green-600 hover:bg-gradient-to-br focus:ring-4 focus:outline-none focus:ring-green-300 dark:focus:ring-green-800 font-medium rounded-lg text-sm px-5 py-2.5 text-center me-2 mb-2" %>
  </div>

  
  <div id="galleries" class="min-w-full flex mx-8 space-x-4">
    <%= render @galleries %>
  </div>
</div>
